<div id="<%= dom_id pokemon %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= pokemon.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Url:</strong>
    <%= pokemon.url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= pokemon.category %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this pokemon", pokemon, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this pokemon", edit_pokemon_path(pokemon), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
